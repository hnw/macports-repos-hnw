    patchfiles-append \
        patch-ext-pdo_oci-config.m4.diff
    depends_lib-append \
        port:oracle-instantclient
    configure.args-append \
        --with-oci8=instantclient,${prefix}/lib/oracle \
        --with-pdo-oci=instantclient,${prefix}/lib/oracle,10.1
}

